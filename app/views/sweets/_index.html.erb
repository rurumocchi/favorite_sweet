<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% sweets.each do |sweet| %>
    <tr>
      <td></td>
      <td><%= link_to sweet.name, sweet_path(sweet), class: "sweet_#{sweet.id}" %></td>
      <td><%= sweet.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>